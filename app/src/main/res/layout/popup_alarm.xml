<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/alarmActivityLayout">

    <!-- ALARMS TVs -->
    <TextView
        android:id="@+id/alarmActivityBgTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timeTxtSize"
        android:textStyle="italic"
        android:fontFamily="@font/default_font"/>

    <!-- UI -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"

        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popupAlarmTimeTV"
                android:textColor="@color/defaultTxtColor"
                android:textSize="@dimen/alarmActivityTextSize"
                android:textStyle="italic"
                android:fontFamily="@font/default_font"

                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popupAlarmSnoozeBtn"
                android:text="SNOOZE"
                android:textStyle="italic"
                android:fontFamily="@font/default_font"
                android:background="@drawable/custom_btn"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popupAlarmOffBtn"
                android:text="TURN OFF"
                android:textStyle="italic"
                android:fontFamily="@font/default_font"
                android:background="@drawable/custom_btn"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>