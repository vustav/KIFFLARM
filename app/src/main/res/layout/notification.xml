<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notificationBg"
    android:background="@drawable/alarma">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationTVShadow"
        android:textSize="@dimen/alarmActivityTextSize"
        android:textStyle="italic"
        android:fontFamily="@font/default_font"
        android:textColor="@color/shadowColor"
        android:alpha=".5"

        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationTV"
        android:textSize="@dimen/alarmActivityTextSize"
        android:textStyle="italic"
        android:fontFamily="@font/default_font"/>

</RelativeLayout>