<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/marginLarge">

    <!-- A LITTLE TRICK TO MAKE A BG IMAGE WRAP THE CONTENT -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listBgIV"
        android:layout_alignTop="@id/listContent"
        android:layout_alignBottom="@id/listContent"
        android:layout_alignStart="@id/listContent"
        android:layout_alignEnd="@id/listContent"/>

    <ScrollView
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginLarge"
        android:id="@+id/listContent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="@dimen/timeBoxSize"
                    android:layout_height="@dimen/timeBoxSize"
                    android:id="@+id/setTimePopupHourET"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:textColor="@color/alarmsVHtext"
                    android:background="@color/alarmsVHbg"
                    android:textSize="@dimen/setTimeTxtSize"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/alarmsVHtext"
                    android:background="@color/alarmsVHbg"
                    android:textSize="@dimen/setTimeTxtSize"
                    android:text=":"/>

                <EditText
                    android:layout_width="@dimen/timeBoxSize"
                    android:layout_height="@dimen/timeBoxSize"
                    android:id="@+id/setTimePopupMinuteET"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:textColor="@color/alarmsVHtext"
                    android:background="@color/alarmsVHbg"
                    android:textSize="@dimen/setTimeTxtSize"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/watchSize"
                android:layout_height="@dimen/watchSize">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/watch"/>
            </FrameLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/setTimeOKBtn"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>