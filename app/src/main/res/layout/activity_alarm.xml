<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarmActivityLayout">

    <!-- ALARMS TVs -->
    <TextView
        android:id="@+id/alarmActivityBgTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timeTxtSize"
        android:textStyle="italic"
        android:fontFamily="@font/default_font"/>

    <!-- UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"

        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/shadowColor"
                    android:layout_marginTop="@dimen/shadowOffset"
                    android:layout_marginStart="@dimen/shadowOffset"
                    android:alpha=".5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/alarmActivityTimeTV"
                    android:background="@color/alarmsVHbg"
                    android:textColor="@color/defaultTxtColor"
                    android:textSize="@dimen/alarmActivityTextSize"
                    android:textStyle="italic"
                    android:fontFamily="@font/default_font"

                    android:layout_marginEnd="@dimen/shadowOffset"
                    android:layout_marginBottom="@dimen/shadowOffset"/>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/marginLarge"
            android:layout_marginBottom="@dimen/marginLarge"
            android:layout_marginEnd="@dimen/marginLarge">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/alarmActivitySnoozeBtn"
                android:text="SNOOZE"
                android:textStyle="italic"
                android:fontFamily="@font/default_font"
                android:background="@drawable/custom_btn"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/marginLarge"
            android:layout_marginBottom="@dimen/marginLarge"
            android:layout_marginEnd="@dimen/marginLarge">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/alarmActivityOffBtn"
                android:text="TURN OFF"
                android:textStyle="italic"
                android:fontFamily="@font/default_font"
                android:background="@drawable/custom_btn"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>